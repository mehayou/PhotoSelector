<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="6dp"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/image_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:background="#FFEFEFEF" />

        <ProgressBar
            android:id="@+id/progress_bar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:indeterminate="true"
            android:maxHeight="8dp"
            android:minHeight="8dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFEFEFEF"
        android:orientation="vertical"
        android:paddingLeft="6dp"
        android:paddingRight="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/cb_format"
                style="?attr/editTextStyle"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:button="@android:color/transparent"
                android:gravity="center"
                android:text="JPG"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/et_compress_max_size"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:hint="Max size (KB)"
                android:inputType="number"
                android:maxLength="4"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/et_compress_max_dpi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:hint="Max dpi (px)"
                android:inputType="number"
                android:maxLength="4"
                android:textSize="14sp" />

            <CheckBox
                android:id="@+id/cb_compress"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Compress"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_crop_output_x"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:hint="OutputX"
                android:inputType="number"
                android:maxLength="4"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/et_crop_output_y"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:hint="OutputY"
                android:inputType="number"
                android:maxLength="4"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/et_crop_aspect_x"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:hint="AspectX"
                android:inputType="number"
                android:maxLength="2"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/et_crop_aspect_y"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:hint="AspectY"
                android:inputType="number"
                android:maxLength="2"
                android:textSize="14sp" />

            <CheckBox
                android:id="@+id/cb_crop"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Crop"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="6dp"
        android:layout_weight="1"
        android:background="#FFEFEFEF">

        <TextView
            android:id="@+id/text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/image_recycle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginBottom="9dp"
            android:text="recycle"
            android:textColor="@android:color/holo_red_light" />

        <Button
            android:id="@+id/image_camera"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginBottom="9dp"
            android:layout_weight="1"
            android:text="camera" />

        <Button
            android:id="@+id/image_gallery"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="3dp"
            android:layout_marginRight="6dp"
            android:layout_marginBottom="9dp"
            android:layout_weight="1"
            android:text="gallery" />

    </LinearLayout>
</LinearLayout>